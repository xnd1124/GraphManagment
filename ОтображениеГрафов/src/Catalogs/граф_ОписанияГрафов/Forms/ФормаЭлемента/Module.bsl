	Оповещение = Новый ОписаниеОповещения("ПослеВыбораТипаОформления", ЭтотОбъект, ДопПараметры);	
	СписокТипов.Добавить("Элемент оформления");
	СписокТипов.Добавить("Поле данных, содержащее имя элемента оформления");
