	РезультатСКДРебра.Очистить();
	ЗначениеВРеквизитФормы(ДанныеДляГрафа.Узлы, "РезультатСКДУзлы");
	РезультатСКДРебра.Загрузить(ДанныеДляГрафа.Ребра);
КонецПроцедуры

